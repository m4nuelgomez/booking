generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum MessageDirection {
  INBOUND
  OUTBOUND
}

enum WebhookStatus {
  RECEIVED
  PROCESSED
  FAILED
}

enum OutboxStatus {
  PENDING
  SENDING
  SENT
  FAILED
}

enum MessageStatus {
  QUEUED
  SENT
  DELIVERED
  READ
  FAILED
}

enum AppointmentStatus {
  SCHEDULED
  COMPLETED
  CANCELED
  NO_SHOW
}

model Client {
  id         String   @id @default(cuid())
  businessId String
  phone      String
  name       String?
  notes      String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  business      Business       @relation(fields: [businessId], references: [id])
  conversations Conversation[]
  appointments  Appointment[]

  @@unique([businessId, phone])
  @@index([businessId, updatedAt])
}

model Appointment {
  id             String  @id @default(cuid())
  businessId     String
  clientId       String?
  conversationId String?

  startsAt DateTime
  endsAt   DateTime?
  service  String?
  notes    String?
  status   AppointmentStatus @default(SCHEDULED)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  business     Business      @relation(fields: [businessId], references: [id])
  client       Client?       @relation(fields: [clientId], references: [id])
  conversation Conversation? @relation(fields: [conversationId], references: [id])

  @@index([businessId, startsAt])
  @@index([businessId, status, startsAt])
  @@index([clientId, startsAt])
}

model Business {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  users         User[]
  conversations Conversation[]
  messages      Message[]
  webhookEvents WebhookEvent[]
  outbox        OutboxMessage[]

  onboardingTokens OnboardingToken[]

  clients      Client[]
  appointments Appointment[]

  channelAccounts ChannelAccount[]
}

model User {
  id         String   @id @default(cuid())
  businessId String
  email      String   @unique
  name       String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  business Business @relation(fields: [businessId], references: [id])

  @@index([businessId])
}

model WebhookEvent {
  id          String        @id @default(cuid())
  businessId  String?
  provider    String
  eventType   String?
  payload     Json
  status      WebhookStatus @default(RECEIVED)
  receivedAt  DateTime      @default(now())
  processedAt DateTime?

  business Business? @relation(fields: [businessId], references: [id])

  @@index([provider, receivedAt])
  @@index([status, receivedAt])
}

model Conversation {
  id             String  @id @default(cuid())
  businessId     String
  channel        String  @default("whatsapp")
  contactKey     String
  contactDisplay String?

  lastMessageAt DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  lastReadMessageId String?
  unreadCount       Int     @default(0)

  clientId String?
  client   Client? @relation(fields: [clientId], references: [id])

  business       Business        @relation(fields: [businessId], references: [id])
  messages       Message[]
  outboxMessages OutboxMessage[]
  appointments   Appointment[]

  @@unique([businessId, channel, contactKey])
  @@unique([businessId, clientId, channel])
  @@index([businessId, channel, lastMessageAt])
  @@index([businessId, channel, unreadCount])
  @@index([clientId])
}

model Message {
  id                String           @id @default(cuid())
  businessId        String
  conversationId    String
  direction         MessageDirection
  provider          String
  providerMessageId String?
  fromPhone         String
  toPhone           String
  text              String?
  payload           Json?
  createdAt         DateTime         @default(now())
  updatedAt         DateTime         @updatedAt

  status      MessageStatus @default(QUEUED)
  deliveredAt DateTime?
  readAt      DateTime?

  business     Business     @relation(fields: [businessId], references: [id])
  conversation Conversation @relation(fields: [conversationId], references: [id])

  @@unique([provider, providerMessageId])
  @@index([conversationId, createdAt])
  @@index([businessId, createdAt])
  @@index([conversationId, updatedAt])
  @@index([conversationId, status])
}

model OutboxMessage {
  id             String @id @default(cuid())
  businessId     String
  conversationId String

  channel    String
  contactKey String
  payload    Json

  status        OutboxStatus @default(PENDING)
  attemptCount  Int          @default(0)
  nextAttemptAt DateTime     @default(now())
  lastError     String?
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  business     Business     @relation(fields: [businessId], references: [id])
  conversation Conversation @relation(fields: [conversationId], references: [id])

  @@index([status, nextAttemptAt])
  @@index([businessId, createdAt])
  @@index([businessId, channel, createdAt])
}

model ChannelAccount {
  id         String @id @default(cuid())
  businessId String

  channel String

  providerAccountId String

  displayName   String?
  displayNumber String?
  config        Json?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  business Business @relation(fields: [businessId], references: [id])

  @@unique([channel, providerAccountId], name: "channel_providerAccountId")
  @@index([businessId, channel])
}

model OnboardingToken {
  id         String   @id @default(cuid())
  businessId String
  token      String   @unique
  expiresAt  DateTime
  createdAt  DateTime @default(now())

  business Business @relation(fields: [businessId], references: [id], onDelete: Cascade)

  @@index([businessId])
}
